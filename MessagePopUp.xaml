<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="SmartCart.MessagePopUp"
            Size="300,200"
             >
    <Frame
        Padding="20"
        BackgroundColor="White"
        CornerRadius="15"
        HasShadow="True"
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <VerticalStackLayout Spacing="20" HorizontalOptions="Center">
            <Label x:Name="MessageLabel" Text="Default Message" FontSize="16" HorizontalOptions="Center" TextColor="Black" />

            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Button Text="OK" Clicked="OnOkClicked" WidthRequest="80" />
                <Button x:Name="CancelButton" Text="Cancel" Clicked="OnCancelClicked" IsVisible="False" WidthRequest="80" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>