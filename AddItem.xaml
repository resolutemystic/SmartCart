<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartCart.AddItem"
             Title="Add Grocery Item">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Label Text="Item Name" />
            <Picker x:Name="ItemNamePicker" Title="Select Item"/>

            <Label Text="Quantity" />
            <Entry x:Name="QuantityEntry" Keyboard="Numeric" Placeholder="e.g. 1" TextChanged="Entry_TextChanged" />

            <Label Text="Priority" />
            <Picker x:Name="PriorityPicker" Title="Select Priority"/>

            <Button Text="Add Item" Clicked="Button_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>